<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  
    android:orientation="vertical">
   
  <LinearLayout
     android:id="@+id/navigation"
    android:layout_width="fill_parent"
    android:layout_height="35dip" 
          android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/padtitle50">
     <TextView
        android:id="@+id/pageheadtitlecenter"
        android:layout_width="90dip"
        android:layout_height="35dip"
           android:gravity="center"
           android:textColor="#ffffff"
           android:textSize="20sp"
         
        android:text="告警">
      </TextView>    
    </LinearLayout> 
  <LinearLayout  
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:gravity="center"
         android:background="@drawable/padtitle32" >
    <LinearLayout       
        android:layout_width="200dip"
        android:layout_height="32dip"    
         android:background="@drawable/padtitle32" >  
        <ImageButton
           android:id="@+id/alarmlevel"
           android:layout_height="30dip"
           android:layout_width="60dip"
           android:gravity="center"     
           android:background="@drawable/report_subbtn_bg"     
           android:src="@drawable/eventseverity0"                           
         />
       <TextView
        android:id="@+id/alarmcount"
        android:layout_width="200dip"
        android:layout_height="30dip"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:text="11" />
        <ImageButton
            android:id="@+id/alarmlock"
            android:layout_height="30dip"
            android:layout_width="60dip"
            android:gravity="center"                
            android:background="@drawable/report_subbtn_bg"
            android:src="@drawable/unlock"
 		/>
    </LinearLayout>
        </LinearLayout>

    <LinearLayout  
        
        android:layout_width="fill_parent"  
        android:layout_height="30dip"  
        android:orientation="horizontal"
         android:background="@drawable/padlistback3" >  
    
        <TextView  
            android:layout_width="40dip"  
            android:layout_height="30dip"  
               android:gravity="center"
            android:textColor="#000000" 
            android:text="序号"  
            android:textSize="16sp" />  
       
        <TextView  
             android:layout_width="40dip"  
            android:layout_height="30dip" 
            android:textColor="#000000" 
             android:gravity="center"
            android:text="等级"  
            android:textSize="16sp" />   
           
        <TextView  
            android:layout_width="fill_parent"  
            android:layout_height="30dip"  
            android:gravity="center"
             android:textColor="#000000" 
            android:text="告警描述"  
            android:textSize="16sp" />  
      
    </LinearLayout> 
    <ListView  
        android:id="@+id/active_alarm_lv"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" 
        android:cacheColorHint="#00000000" >  
    </ListView>  

   
</LinearLayout>