<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
     <View                    
            android:layout_width="40dip"
                android:layout_height="10dip"                 
      />
     <LinearLayout 
    	 android:layout_width="1200dip"
    	 android:layout_height="170dip" 
    	  android:gravity="center_horizontal|center_vertical"
  		  android:orientation="vertical" 
          android:background="@drawable/padweather474_278">
  		   <LinearLayout 
   	 		 android:layout_width="1200dip"
     		 android:layout_height="170dip" 
     		 android:gravity="center_vertical"
     		 android:orientation="horizontal"> 
     		 <View                    
               android:layout_width="40dip"
                android:layout_height="10dip"                 
               />
     		 <ImageView   				
    				  android:layout_width="92dip"
    				  android:layout_height="101dip"
     				  android:src="@drawable/padequipment"
     		 />
     		 <TextView
               android:id="@+id/equipment_list_id"
               android:layout_width="0dip"
               android:layout_height="0dip"
             
                android:text="0"
                android:textColor="#3366cc"
                android:textSize="24sp" /> 
            <TextView
               android:id="@+id/equipment_list_Name"
               android:layout_width="200dip"
               android:layout_height="wrap_content"
                android:shadowRadius="2.0"
                android:text="#1逆变器室"
                android:textColor="#3366cc"
                android:textSize="24sp" /> 
            <View                    
                android:layout_width="30dip"
                  android:layout_height="10dip"                 
                 />  
             <include android:id="@+id/item_header1"   layout="@layout/equipmentsoverviewitem" />                 
    	</LinearLayout>         
     </LinearLayout>  
</LinearLayout>